        if block
            block
        else
            .container
                .row.align-items-center
                    .col-md-6.small
                        | Copyright &copy; Músicas para Missa 2020
                    .col-md-6.text-md-right.small
                        a(href='/politica-de-privacidade/') Política de Privacidade
